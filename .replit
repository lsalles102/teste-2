modules = ["php-8.2", "nodejs-20", "vue-node-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["mysql80", "pkg-config"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Site"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API 10 Jogos"

[[workflows.workflow]]
name = "Laravel Site"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/site && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[workflows.workflow]]
name = "API 10 Jogos"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace/api && PORT=3000 node dist/index.js"
waitForPort = 3000

[[ports]]
localPort = 443
externalPort = 3001

[[ports]]
